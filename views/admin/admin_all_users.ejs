<%- include('partials/admin_header'); -%>

<div class="container">
<h1 class="page_head">All Users:</h1>

<table class="table table-bordered table-hover table-format">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Full Name</th>
            <th scope="col">Location</th>
            <th scope="col">Blogs</th>
            <th scope="col">Role</th>
            <th scope="col">Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.firstName %> <%= user.lastName %></td>
                <td><%= user.location %></td>
                <td><%= user.posts.length %></td>
                <td><%= user.role %></td>
                <td><a href="/admin/edit_user/<%= user._id %>"><i class="bi bi-pencil-square"></i></a> / <a onclick="return confirm('Are you sure you want to permanently delete this user?')" href="/admin/delete_user/<%= user._id %>"><i class="bi bi-trash-fill"></i></a></td>
            </tr>    
        <% }) %>
    </tbody>
</table>
    
</div> 

<%- include('partials/admin_footer'); -%>